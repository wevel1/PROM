<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dm2.ejercicios.layout2">

    <TextView
        android:id="@+id/l2_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Introduce PRIMER valor:"/>

    <EditText
        android:id="@+id/l2_edit1"
        android:layout_below="@id/l2_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/l2_edit1"
        android:id="@+id/l2_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Introduce SEGUNDO valor:"/>

    <EditText
        android:id="@+id/l2_edit2"
        android:layout_below="@id/l2_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/l2_butsum"
        android:layout_below="@id/l2_edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:onClick="operation_overlord"/>

    <Button
        android:id="@+id/l2_butrest"
        android:layout_below="@id/l2_edit2"
        android:layout_toRightOf="@id/l2_butsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="-"
        android:onClick="operation_overlord"/>

    <Button
        android:id="@+id/l2_butmult"
        android:layout_below="@id/l2_edit2"
        android:layout_toRightOf="@id/l2_butrest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="*"
        android:onClick="operation_overlord"/>

    <Button
        android:id="@+id/l2_butdiv"
        android:layout_below="@id/l2_edit2"
        android:layout_toRightOf="@id/l2_butmult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="/"
        android:onClick="operation_overlord"/>

    <TextView
        android:layout_below="@id/l2_butsum"
        android:id="@+id/l2_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Resultado: "
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_below="@id/l2_butsum"
        android:layout_toRightOf="@id/l2_txt3"
        android:id="@+id/l2_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
